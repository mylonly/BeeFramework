<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="UADHTTPRequestCell">
    <col class="wrapper">
        <!-- add your UI elements here -->
        <row class="header-wrapper">
            <view class="header image"></view>
        </row>
        <row class="info-wrapper" orient="v">
            <view class="info title">TITLE</view>
            <view class="info detail">DETAIL</view>
        </row>
        <row class="mark-wrapper">
            <view class="mark action"></view>
        </row>
    </col>
    
    <style type="text/css">
        <!-- Background Begin-->
        .wrapper {
            width: 100%;
            height: 100%;
            float: center;
        }
        <!-- Background End-->
        
        <!-- The picture on the left -->
        <!-- Left Begin -->
        .header-wrapper {
            width: 25%;
            height: 100%;
        }
        .image {
            position: relative;
            float: center;
            v-float: center;
            width: 95%;
            height: 95%;
            background-color: red;
        }
        <!-- Left End -->
        
        <!-- Content is included in the middle -->
        <!-- Middle Begin -->
        .info-wrapper {
            width: 50%;
            height: 100%;
            position: relative;
        }
        .title {
            width: 90%;
            height: 50%;
            left: 5%;
            text-align: left;
            font-size: 16px;
            background-color: yellow;
        }
        .detail {
            width: 90%;
            height: 30%;
            left: 5%;
            text-align: left;
            font-size: 10px;
            background-color: white;
        }
        <!-- Middle End -->
        
        <!-- Additional information on the right -->
        <!-- Right Begin -->
        .mark-wrapper {
            width: 25%;
            height: 100%;
        }
        .action {
            width: 95%;
            height: 30%;
            float: center;
            vfloat: center;
            background-color: blue;
        }
        <!-- Right End -->
        
    </style>
</ui>
